pipeline 
{
    agent any
    
    environment {
        NOSTR_BOT_KEY1 = credentials('NOSTR_BOT_KEY1')
    }

    stages {
    
        stage('build') {
            steps {
                    // Make sure dependencies are installed
                    sh 'composer install'
                }
            }

        stage('finance bot') {
            steps {
                script {
                    // post some financial data
                    def output = sh(returnStdout: true, script: 'php src/botscripts/mondayFinanceBot.php')
                    echo "Output: ${output}"
                }
            }
        }
    }
}
