# Nostrbots Environment Configuration
# Copy this file to .env and fill in your values

# Nostr Bot Configuration
# Generate a key using: php generate-key.php --export
NOSTR_BOT_KEY=your_nostr_private_key_here

# Optional: Custom relay configuration
# NOSTR_RELAYS=wss://relay1.example.com,wss://relay2.example.com

# Optional: Logging configuration
# LOG_LEVEL=info
# LOG_FILE=/app/logs/nostrbots.log

# Optional: Development settings
# APP_ENV=development
# DEBUG=true

# Optional: Timezone (defaults to UTC)
# TZ=UTC
