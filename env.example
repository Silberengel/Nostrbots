# Nostrbots Environment Configuration
# Copy this file to .env and fill in your values

# Nostr Bot Configuration
# Generate keys using: php generate-key.php --export
NOSTR_BOT_KEY_ENCRYPTED=your_encrypted_nostr_private_key_here
NOSTR_BOT_NPUB=your_nostr_public_key_here

# Jenkins Configuration
JENKINS_ADMIN_ID=admin
JENKINS_ADMIN_PASSWORD=admin
NOSTRBOTS_PASSWORD=nostrbots123

# Jenkins Agent Configuration (optional)
# JENKINS_AGENT_SSH_PUBKEY=ssh-rsa your_ssh_public_key_here

# Optional: Custom relay configuration
# NOSTR_RELAYS=wss://relay1.example.com,wss://relay2.example.com

# Optional: Logging configuration
# LOG_LEVEL=info
# LOG_FILE=/app/logs/nostrbots.log

# Optional: Development settings
# APP_ENV=development
# DEBUG=true

# Optional: Timezone (defaults to UTC)
# TZ=UTC
